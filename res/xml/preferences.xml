<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
  <ListPreference
    android:title="@string/player_black"
    android:key="player_black"
    android:defaultValue="Human"
    android:entries="@array/player_types"
    android:entryValues="@array/player_type_values"/>
  <ListPreference
    android:title="@string/player_white"
    android:key="player_white"
    android:defaultValue="Computer"
    android:entries="@array/player_types"
    android:entryValues="@array/player_type_values"/>
  <ListPreference
    android:title="@string/computer_difficulty"
    android:key="computer_difficulty"
    android:defaultValue="1"
    android:entries="@array/computer_levels"
    android:entryValues="@array/computer_level_values"/>
  <ListPreference
    android:title="@string/max_undos"
    android:key="max_undos"
    android:defaultValue="0"
    android:entries="@array/max_undos"
    android:entryValues="@array/max_undo_values"/>
    />
  <ListPreference
    android:title="@string/piece_style"
    android:key="piece_style"
    android:defaultValue="kinki_simple"
    android:entries="@array/piece_style"
    android:entryValues="@array/piece_style_values"/>
    />
  <PreferenceCategory android:title="Advanced settings"/>
  <EditTextPreference
     android:key="download_source_url"
     android:defaultValue="@string/default_download_source_url"
     android:title="Shogi DB source"
     />
</PreferenceScreen>
